{
  "manifest_version": 2,
  "name": "URL Info",
  "version": "1.7",
  "description": "Allow you to copy the full or a part of the URL, or change its scheme.",
  "default_locale": "en",
  "background": {
    "scripts": ["assets/scripts/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "128": "assets/images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "assets/images/icon16.png"
    },
    "default_title": "URL Info",
    "default_popup": "popup.html"
  },
  "permissions": [ "clipboardWrite", "tabs", "http://*/*", "https://*/*", "ftp://*/*" ]
}
